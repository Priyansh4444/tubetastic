{
    "manifest_version": 3,
    "name": "YouTube Analyzer",
    "description": "YouTube video analyzer and focus mode",
    "version": "0.3.0",
    "icons": {
        "64": "img/icon64.png"
    },
    "action": {
        "default_title": "YouTube Video Analyzer popup",
        "default_popup": "dist/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "webRequest",
        "cookies",
        "scripting"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "dist/worker.js"
    },
    "content_scripts": [
        {
            "js": [
                "dist/foreground.js",
                "dist/inject_buttons.js",
                "dist/contentScript.js",
                "dist/content.js"
            ],
            "css": ["dist/yt_styles.css"],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ]
}
